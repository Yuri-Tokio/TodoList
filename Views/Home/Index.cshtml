@model TodoViewModel

<div class="row justify-content-center">
    <div class="col-xl-12 col-lg-8 col-md-8 col-sm-10">
        <table class="table">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Id</th>
                    <th scope="col">Título</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.TodoList)
                {
                    <tr>
                        <th class="todos-column" scope="row">@t.Id</th>
                        <td class="todos-column">@t.Name</td>
                        <td class="todos-column">@t.Description</td>
                        <td class="todos-column">@t.Status</td>
                        <td class="buttons-column">
                            <input type="submit" class="btn btn-danger mb-1 mt-1" value="Deletar" onClick="deleteTodo(@t.Id)" />
                            <input type="submit" class="btn btn-primary mb-1 mt-1" value="Atualizar" onClick="populateForm(@t.Id)" />
                            <input type="submit" class="btn btn-success mb-1 mt-1" value="Concluir" onClick="doneForm(@t.Id)" />
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>